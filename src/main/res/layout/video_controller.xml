<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >


    <LinearLayout
        android:background="#CC000000"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:gravity="center_vertical"
            android:background="@drawable/bg_player_status"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:text="视屏名称"
                android:id="@+id/media_controller_tvname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_battery_20"
                android:id="@+id/media_controller_ivbattery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginRight="8dp"
                android:textColor="#ffffff"
                android:text="系统时间"
                android:id="@+id/media_controller_sys_tvtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>


        <LinearLayout
            android:gravity="center_vertical"
            android:background="@drawable/bg_player_top_control"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_marginLeft="5dp"
                android:background="@drawable/btn_voice_select"
                android:id="@+id/media_controller_btvoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <SeekBar
                android:id="@+id/pb_voice"
                android:progressDrawable="@drawable/progress_horizontal"
                android:maxWidth="6dp"
                android:maxHeight="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:thumb="@drawable/progress_thumb"/>

            <Button
                android:id="@+id/media_controller_bt_swich_player"
                android:background="@drawable/btn_swich_player_selecter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:background="#CC000000"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="4dip"
        android:orientation="vertical">

        <LinearLayout
            android:gravity="center_vertical"
            android:background="@drawable/bg_player_top_control"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_current_time"
                android:text="当前时间"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <SeekBar
                android:id="@+id/pb_time"
                android:progressDrawable="@drawable/progress_horizontal"
                android:maxWidth="6dp"
                android:maxHeight="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:thumb="@drawable/progress_thumb"/>

            <TextView
                android:id="@+id/tv_total_time"
                android:text="总时长"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_video_exit"
                android:layout_weight="1"
                android:background="@drawable/btn_video_exit_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_video_pre"
                android:layout_weight="1"
                android:background="@drawable/btn_video_pre_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_video_pause"
                android:layout_weight="1"
                android:background="@drawable/btn_video_pause_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_video_next"
                android:layout_weight="1"
                android:background="@drawable/btn_video_next_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_video_swich_screen"
                android:layout_weight="1"
                android:background="@drawable/btn_video_swich_screen_full_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

</LinearLayout>
</RelativeLayout>
